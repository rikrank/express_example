{
    "compilerOptions": {
      "typeRoots": ["node_modules/@types", "types"],
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
    },
    "include": ["src/**/*.ts", "types"],
    "exclude": ["node_modules"] 
  }
  